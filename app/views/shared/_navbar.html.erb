<div class="navbar-wekite">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wekite-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wekite-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->


      <!-- Avatar with dropdown menu -->
      <div class="navbar-wekite-item">
        <div class="dropdown">
          <% if current_user.facebook_picture_url? %>
          <%= image_tag current_user.facebook_picture_url, class: "avatar dropdown-toggle", id: "navbar-wekite-menu", "data-toggle" => "dropdown" %>

          <% elsif current_user.avatar %>

          <%= cl_image_tag current_user.avatar.path, class: "avatar dropdown-toggle", id: "navbar-wekite-menu", "data-toggle" => "dropdown" %>
          <% else %>
          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wekite-menu", "data-toggle" => "dropdown" %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wekite-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i><%= t(".profile", default: " Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to user_favorites_path(current_user) do %>
                <i class="fa fa-heart"></i><%= t(".favorites", default: " My favorites") %>
              <% end %>
            </li>
            <li>
              <%= link_to new_spot_path do %>
                <i class="fa fa-plus-circle"></i> <%= t(".add", default: "Add a spot") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i><%= t(".edit_profile", default: "Edit my account") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i><%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wekite-item navbar-wekite-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wekite-item hidden-md hidden-lg">
  <% if user_signed_in? %>
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wekite-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <%= t(".profile", default: " Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to new_spot_path do %>
                <%= t(".add", default: "Add a spot") %>
              <% end %>
            </li>
            <li>
              <%= link_to user_favorites_path(current_user) do %>
                <%= t(".favorites", default: " My favorites") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
      </ul>
    </div>
  <% else %>
    <!-- Login link (when logged out) -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wekite-item navbar-wekite-link" %>
    <% end %>
  </div>
</div>

