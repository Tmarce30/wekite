           <div class='input-home'>
            <label>When</label>
            <%= select_tag(:date, options_for_select(@possible_dates), {:class => 'form-control'}) %>
          </div>
          <%= submit_tag("SPOT IT", :class => "btn btn-wekite" )%>
        <% end %>
      </div>
    </div>

