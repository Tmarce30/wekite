<div id="banner-wrap">
  <div class="map-content text-center">
    <h2 id="description"></h2>
      <%= form_tag(spots_path, method: :get) do %>
        <label>Where</label><%= text_field_tag :address, nil, class: "search-field", :onclick => 'if($(this).val()=="Enter search term..."){$(this).val("");};' %><br>
        <label>When</label>
        <%= select_tag(:date, options_for_select(@possible_dates), {:class => 'form-control'}) %><br>
        <%= submit_tag("Spot it!", :class => "btn btn-wekite" )%>
      <% end %>
  </div>
</div>
<div class="what-is-it">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-4">
        <i class="fa fa-search" aria-hidden="true"></i>
      </div>
      <div class="col-xs-4">
        <i class="fa fa-info" aria-hidden="true"></i>
      </div>
      <div class="col-xs-4">
        <i class="fa fa-camera-retro" aria-hidden="true"></i>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4">
        <h3>Find</h3>
        <p>Choose the perfect spot for your next ride! </p>
      </div>
      <div class="col-xs-4">
        <h3>Inform</h3>
        <p>Since you choose your spot, you can inform the others about your plan.</p>
      </div>
      <div class="col-xs-4">
        <h3>Share</h3>
        <p>After your ride, you can add photos to the spot!</p>
      </div>
    </div>
  </div>
