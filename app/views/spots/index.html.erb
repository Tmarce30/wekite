<div class="main-container">
  <div class="carousel">
    <div class="logo">
    </div>
    <div class="filters">
      <%= form_tag(spots_path, method: :get) do %>
        <label>Where</label><%= text_field_tag :address, nil, class: "filter-search", :onclick => 'if($(this).val()=="Enter search term..."){$(this).val("");};' %>
        <label>When</label>
          <%= select_tag(:date, options_for_select(@possible_dates), {:class => 'date'}) %><br>
        <%= submit_tag("Go", class: "btn btn-wekite" )%>
      <% end %>
      </div>
    <div class="cards-container">
    <% @spots.each do |spot| %>
      <div class="cards-dimension main-card" data-id="<%= spot.id %>">
        <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.05)), url('<%= cl_image_path spot.avatar.path %>')">
          <div class="review">
            <% spot.average_calc.to_i.times do %>
              <div class="fa fa-star" ></div>
            <% end %>
            <% if spot.average_calc - spot.average_calc.to_i > 0.25 %>
              <div class="fa fa-star-half-o" ></div>
            <% end %>
            </div>
          <%= link_to spot_path(spot) do %>
          <% if  spot.avatar? %>
            <div class="card-body" >
              <span class="card-name text-center"><%= spot.name %></span>
            </div>
          <% else %>
            <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.05)), url('<%= image_path 'http://lorempixel.com/400/200/' %>')">
              <span class="card-name">
                <%= spot.name %>
              </span>
            </div>
          <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="weather-card">
      <div class="fa fa-sun-o"></div>
      <p>25Â°</p>
    </div>
  <div class="arrow">
    <div class="arrows-direction">
      <a href="#" id="carousel-back" class="carousel-nav fa fa-angle-left"></a>
      <a href="#" id="carousel-next" class="carousel-nav fa fa-angle-right"></a>
    </div>
  </div>
</div>

<div id="map" ></div>

</div>



<% content_for(:after_js) do %>
  <script>

  var markers;
    $( document ).ready( function() {
      $(".main-card").hide();
      $(".main-card").first().show();
      let current_card = $(".main-card").first();

      $("#carousel-back").click( function() {
        console.log("hi");
        current_card.hide();
        current_card = current_card.prev(".main-card");
        if(current_card.html() == null) {
          current_card = $(".main-card").last();
      }
        current_card.show();
        markers.forEach((marker) => {
          if (marker.serviceObject.title == current_card.attr("data-id")) {
          google.maps.event.trigger(marker.getServiceObject(), "click");
        };
      });
      });

      $("#carousel-next").click( function() {
        current_card.hide();
        current_card = current_card.next(".main-card");
        if(current_card.html() == null) {
          current_card = $(".main-card").first();
        }
        current_card.show();
        markers.forEach((marker) => {
          if (marker.serviceObject.title == current_card.attr("data-id")) {
          google.maps.event.trigger(marker.getServiceObject(), "click");
        };
      });
      });
    });

    var styles = [
    {
        "featureType": "administrative",
        "elementType": "labels.text.fill",
        "stylers": [
            {
                "color": "#444444"
            }
        ]
    },
    {
        "featureType": "administrative.country",
        "elementType": "geometry.fill",
        "stylers": [
            {
                "visibility": "on"
            }
        ]
    },
    {
        "featureType": "landscape",
        "elementType": "all",
        "stylers": [
            {
                "color": "#f2f2f2"
            }
        ]
    },
    {
        "featureType": "poi",
        "elementType": "all",
        "stylers": [
            {
                "visibility": "off"
            }
        ]
    },
    {
        "featureType": "road",
        "elementType": "all",
        "stylers": [
            {
                "saturation": -100
            },
            {
                "lightness": 45
            }
        ]
    },
    {
        "featureType": "road.highway",
        "elementType": "all",
        "stylers": [
            {
                "visibility": "simplified"
            }
        ]
    },
    {
        "featureType": "road.arterial",
        "elementType": "labels.icon",
        "stylers": [
            {
                "visibility": "off"
            }
        ]
    },
    {
        "featureType": "transit",
        "elementType": "all",
        "stylers": [
            {
                "visibility": "off"
            }
        ]
    },
    {
        "featureType": "water",
        "elementType": "all",
        "stylers": [
            {
                "color": "#4694ec"
            },
            {
                "visibility": "on"
            }
        ]
    }
]

    Gmaps.store = {};

    var handler = Gmaps.build('Google');
    handler.buildMap({
      provider: {
        styles: styles
       },
      internal: { id: 'map' } }, function() {
      markers = handler.addMarkers(<%= raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      if (markers.length == 0) {
        handler.getMap().setZoom(2);
      } else if (markers.length == 1) {
        handler.getMap().setZoom(14);
      }
      document.querySelectorAll(".cards-dimension").forEach((spot) => {
      spot.addEventListener("mouseover", (event) => {
        console.log('hello---------------------')
        const id = event.currentTarget.dataset.id
        markers.forEach((marker) => {
           if (marker.serviceObject.title == id) {
            google.maps.event.trigger(marker.getServiceObject(), "click");
           };
        });
      });
    });
    });


  </script>
<% end %>























