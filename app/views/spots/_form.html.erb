<%= simple_form_for(@spot) do |f| %>
  <%= f.label :name, class: "label-name" %>
  <%= f.input :name, label: false, placeholder: "Tarifa", input_html: {class: "input-name"}%>
  <%= f.label :address, class: "label-address" %>
  <%= f.input :address, label: false, placeholder: "Tarifa, Spain", input_html: {class: "input-address" }%>
  <%= f.label :description, class: "label-description" %>
  <%= f.input :description, label: false, placeholder: "This spot has ...", input_html: {class: "input-description"} %>
  <% f.label :photo, class: "label-photo" %>
  <%= f.input :avatar, as: :attachinary %>
  <%= f.button :submit, "Add your spot", class: "btn btn-danger btn-add" %>
<% end %>
