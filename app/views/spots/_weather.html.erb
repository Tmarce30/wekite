<div class="weather">

  <!-- Weather icons -->

  <% case @weather.weather_code %>
  <% when '113' %>
    <%= image_tag 'sunny-day.png' %>
  <% when '116' %>
    <%= image_tag 'partialy-cloudy.png' %>
  <% when '119' %>
    <%= image_tag 'cloudy-day.png' %>
  <% when '122' %>
    <%= image_tag 'cloud-black-shape.png' %>
  <% when '143' %>
    <%= image_tag 'mist.png' %>
  <% when '260' || '248' %>
    <%= image_tag 'foggy.png' %>
  <% when '353' || '263' || '176' || '296' || '293' || '266' %>
    <%= image_tag 'drizzle.png' %>
  <% when '356' || '305' || '299' || '359' || '308' || '302' %>
    <%= image_tag 'rainy-day.png' %>
  <% when '368' || '326' || '323' || '320' || '227' %>
    <%= image_tag 'hail.png' %>
  <% when '395' || '371' || '335' || '338' || '332' || '329' || '230' %>
    <%= image_tag 'hail-storm.png' %>
  <% when '374' || '365' || '362' || '179' || '377' || '350' || '317' || '314' || '311' || '284' || '281' || '185' || '182' %>
    <%= image_tag 'sleet.png' %>
  <% when '392' || '389' || '386' || '200' %>
    <%= image_tag 'storm.png' %>
  <% end %>

  <%= @weather.weather_desc %>

  <%= "#{@weather.air_temp}°C" %>
  <%= "#{@weather.wind_speed} km/h" %>

  <%case @weather.wind_dir %>
  <% when 'N' %>
  <%= image_tag 'n.png' %>
  <% when 'NNE' %>
  <%= image_tag 'nne.png' %>
  <% when 'NE' %>
  <%= image_tag 'ne.png' %>
  <% when 'ENE' %>
  <%= image_tag 'ene.png' %>
  <% when 'E' %>
  <%= image_tag 'e.png' %>
  <% when 'ESE' %>
  <%= image_tag 'ese.png' %>
  <% when 'SE' %>
  <%= image_tag 'se.png' %>
  <% when 'SSE' %>
  <%= image_tag 'sse.png' %>
  <% when 'S' %>
  <%= image_tag 's.png' %>
  <% when 'SSW' %>
  <%= image_tag 'ssw.png' %>
  <% when 'SW' %>
  <%= image_tag 'sw.png' %>
  <% when 'WSW' %>
  <%= image_tag 'wsw.png' %>
  <% when 'W' %>
  <%= image_tag 'w.png' %>
  <% when 'WNW' %>
  <%= image_tag 'wnw.png' %>
  <% when 'NW' %>
  <%= image_tag 'nw.png' %>
  <% when 'NNW' %>
  <%= image_tag 'nnw.png' %>
  <% end %>

  <%= "#{@weather.water_temp}°C" %>
</div>
